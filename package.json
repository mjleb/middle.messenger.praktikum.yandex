{
  "name": "chat-js-vanilla",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "start": "tsc && vite build && node server.js",
    "preview": "vite preview",
    "prepare": "husky install",
    "test": "mocha",
    "lint:ts": "eslint \"**/*.{ts,tsx}\"",
    "lint:style": "npx stylelint **/*.css"
  },
  "lint-staged": {
    "*.{ts, tsx}": [
      "npm run lint:ts",
      "npm run test"
    ],
    "*.{css}": [
      "npm run lint:style"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/jsdom": "^21.1.6",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "prettier": "^3.1.0",
    "sinon": "^17.0.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.5"
  },
  "dependencies": {
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-preset-env": "^9.2.0",
    "uuid": "^9.0.1",
    "vite-plugin-handlebars": "^1.6.0"
  },
  "engines": {
    "node": ">= 16",
    "npm": ">= 8"
  }
}
